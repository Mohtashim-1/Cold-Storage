<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cold Storage Groups -->
        <record id="group_cs_user" model="res.groups">
            <field name="name">Cold Storage User</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can create intake/release, read tariffs</field>
        </record>
        
        <record id="group_cs_manager" model="res.groups">
            <field name="name">Cold Storage Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can approve/cancel, edit tariffs, run billing</field>
            <field name="implied_ids" eval="[(4, ref('group_cs_user'))]"/>
        </record>
        
        <record id="group_cs_accountant" model="res.groups">
            <field name="name">Cold Storage Accountant</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can validate invoices</field>
        </record>
        
        <record id="group_cs_warehouse" model="res.groups">
            <field name="name">Cold Storage Warehouse</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can execute stock pickings</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Intake Rules -->
        <record id="cs_storage_intake_rule_user" model="ir.rule">
            <field name="name">Cold Storage Intake: User Access</field>
            <field name="model_id" ref="model_cs_storage_intake"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_cs_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="cs_storage_intake_rule_manager" model="ir.rule">
            <field name="name">Cold Storage Intake: Manager Access</field>
            <field name="model_id" ref="model_cs_storage_intake"/>
