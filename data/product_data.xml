<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Product Category for Cold Storage -->
        <record id="product_category_cold_storage" model="product.category">
            <field name="name">Cold Storage</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <!-- Cold Storage Service Product -->
        <record id="product_cold_storage_service" model="product.product">
            <field name="name">Cold Storage Service (Daily)</field>
            <field name="type">service</field>
            <field name="categ_id" ref="cs_cold_storage.product_category_cold_storage"/>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="description">Cold storage service charged per day based on weight, volume, or flat rate</field>
            <field name="sale_line_warn">no-message</field>
            <field name="purchase_line_warn">no-message</field>
        </record>
        
    </data>
</odoo>
