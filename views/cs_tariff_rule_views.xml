<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tariff Rule Tree View -->
        <record id="view_cs_tariff_rule_tree" model="ir.ui.view">
            <field name="name">cs.tariff.rule.tree</field>
            <field name="model">cs.tariff.rule</field>
            <field name="arch" type="xml">
                <tree string="Tariff Rules" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="basis"/>
                    <field name="price_unit"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="product_category_id"/>
                    <field name="min_temp"/>
                    <field name="max_temp"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Tariff Rule Form View -->
        <record id="view_cs_tariff_rule_form" model="ir.ui.view">
            <field name="name">cs.tariff.rule.form</field>
            <field name="model">cs.tariff.rule</field>
            <field name="arch" type="xml">
                <form string="Tariff Rule">
                    <header>
                        <button name="toggle_active" type="object" string="Archive" class="oe_highlight" invisible="active == False"/>
                        <button name="toggle_active" type="object" string="Unarchive" invisible="active == True"/>
                        <field name="active" widget="radio" options="{'horizontal': true}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_intakes" type="object" class="oe_stat_button" icon="fa-truck">
                                <field name="intake_count" widget="statinfo" string="Intakes"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Rule Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="basis" widget="radio"/>
                                <field name="price_unit"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="rounding_policy" widget="radio"/>
                                <field name="min_bill_days"/>
                                <field name="price_product_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Filters" name="filters">
                                <group>
                                    <group string="Product Filters">
                                        <field name="product_category_id"/>
                                        <field name="product_id"/>
                                    </group>
                                    <group string="Temperature Filters">
                                        <field name="min_temp"/>
                                        <field name="max_temp"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="min_qty"/>
                                </group>
                            </page>
                            <page string="Taxes" name="taxes">
                                <group>
                                    <field name="taxes_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Tariff Rule Search View -->
        <record id="view_cs_tariff_rule_search" model="ir.ui.view">
            <field name="name">cs.tariff.rule.search</field>
            <field name="model">cs.tariff.rule</field>
            <field name="arch" type="xml">
                <search string="Search Tariff Rules">
                    <field name="name"/>
                    <field name="basis"/>
                    <field name="product_category_id"/>
                    <field name="product_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Basis" name="group_basis" context="{'group_by': 'basis'}"/>
                        <filter string="Category" name="group_category" context="{'group_by': 'product_category_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Tariff Rule Action -->
        <record id="action_cs_tariff_rule" model="ir.actions.act_window">
            <field name="name">Tariff Rules</field>
            <field name="res_model">cs.tariff.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_cs_tariff_rule_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first tariff rule!
                </p>
                <p>
                    Tariff rules define how storage charges are calculated based on
                    product type, temperature, and duration.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
